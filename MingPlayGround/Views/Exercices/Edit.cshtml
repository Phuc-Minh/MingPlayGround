@model MingPlayGround.Models.Exercice

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit Exercice</h1>
    <h4>Exercice</h4>
    <hr />

    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DurationSecondes" class="control-label"></label>
                <input asp-for="DurationSecondes" class="form-control" />
                <span asp-validation-for="DurationSecondes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Repetitions" class="control-label"></label>
                <input asp-for="Repetitions" class="form-control" />
                <span asp-validation-for="Repetitions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExerciceType" class="control-label"></label>
                <select asp-for="ExerciceType" class="form-control" asp-items="ViewBag.ExerciseType"></select>
                <span asp-validation-for="ExerciceType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Select Target Muscle Groups:</label>
                @foreach (var muscleGroupName in ViewBag.MuscleGroupNames as List<string>)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="muscleGroup_@muscleGroupName" name="selectedMuscleGroups" value="@muscleGroupName" @(ViewBag.TargetMuscleGroups.Contains(muscleGroupName) ? "checked='checked'" : "")>
                        <label class="form-check-label" for="muscleGroup_@muscleGroupName">@muscleGroupName</label>
                    </div>
                }
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div class="container">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
